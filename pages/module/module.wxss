.flex-wrap{
  display: -webkit-flex;
  flex-direction: column;
}
.flex-wrap view{
  text-align: center;
  font-size: 40rpx;
  line-height: 200rpx;
  color: white;
}
.a{
  background-color: red;
  flex: 1;
}
.b{
  background-color: green;
  flex: 1;
}
.c{
  background-color: blue;
  flex: 3;
}
.wrap{
  width: 400rpx;
  height: 400rpx;
  border: 2px solid red;
}
.wrap view{
  width: 600rpx;
  height: 250rpx;
}
.d{
  background-color: red;
}
.e{
  background-color: green;
}
.f{
  background-color: blue;
}